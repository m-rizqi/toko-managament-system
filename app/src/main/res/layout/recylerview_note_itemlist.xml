<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="2dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/note_inputlayout_kuantitas"
        android:layout_width="90dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Kuantitas"
        android:textColorHint="#B3000000"
        app:hintTextColor="#B3000000"
        app:boxStrokeColor="#66000000"
        app:boxCornerRadiusBottomStart="0dp"
        app:boxCornerRadiusTopEnd="0dp"
        app:boxCornerRadiusBottomEnd="0dp"
        app:boxCornerRadiusTopStart="0dp"
        >

        <EditText
            android:id="@+id/note_edittext_kuantitas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:lines="1"
            android:fontFamily="@font/poppins_w400_regular"
            android:textSize="10sp"
            android:textColor="#B3000000"
            android:inputType="number"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/note_inputlayout_harga"
        android:layout_width="115dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/note_inputlayout_kuantitas"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Harga"
        android:layout_marginLeft="11dp"
        android:textColorHint="#B3000000"
        app:hintTextColor="#B3000000"
        app:boxStrokeColor="#66000000"
        app:boxCornerRadiusBottomStart="0dp"
        app:boxCornerRadiusTopEnd="0dp"
        app:boxCornerRadiusBottomEnd="0dp"
        app:boxCornerRadiusTopStart="0dp"
        >

        <EditText
            android:id="@+id/price_edittext_pedagangprice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:lines="1"
            android:fontFamily="@font/poppins_w400_regular"
            android:textSize="10sp"
            android:textColor="#B3000000"
            android:inputType="number"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/note_imagebutton_deletenote"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/note_inputlayout_harga"
        android:layout_marginLeft="11dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_close_24"
        android:layout_marginTop="6dp"
        />

    <ImageButton
        android:id="@+id/note_imagebutton_addmorenote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/note_imagebutton_deletenote"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/ic_baseline_note_add_24"
        android:background="@android:color/transparent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>